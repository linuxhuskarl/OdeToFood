@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    <div class="text-center">
        <h1 class="display-4">Restaurants</h1>
    </div>

    <form method="get">
        <div class="form-group">
            <div class="input-group">
                <input type="search" class="form-control"
                       asp-for="SearchTerm" />
                <span class="input-group-append">
                    <button class="btn btn-primary">
                        <span class="iconify" data-icon="fa-solid:search" data-inline="false"></span>
                    </button>
                </span>
            </div>
        </div>
    </form>

    <table class="table">
        <thead class="thead-light">
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Cuisine</th>
                <th>Actions</th>
            </tr>
        </thead>
        @foreach (var restaurant in Model.Restaurants)
        {
            <tr>
                <td>
                    @restaurant.Name
                </td>
                <td>
                    @restaurant.Location
                </td>
                <td>
                    @restaurant.Cuisine
                </td>
                <td>
                    <a class="btn btn-lg"
                       asp-page="./Detail"
                       asp-route-restaurantId="@restaurant.Id">
                        <span class="iconify" data-icon="fa-solid:search-plus" data-inline="false"></span>
                    </a>
                    <a class="btn btn-lg"
                       asp-page="./Edit"
                       asp-route-restaurantId="@restaurant.Id">
                        <span class="iconify" data-icon="fa-solid:edit" data-inline="false"></span>
                    </a>
                </td>
            </tr>
        }
    </table>

    <a class="btn btn-primary" asp-page="./Edit">
        Add new
    </a>

    <p>@Model.Message</p>
}
