@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    <div class="text-center">
        <h1 class="display-4">Restaurants</h1>
    </div>

    <table class="table">
        @foreach(var restaurant in Model.Restaurants)
        {
            <tr>
                <td>
                    @restaurant.Name
                </td>
                <td>
                    @restaurant.Location
                </td>
                <td>
                    @restaurant.Cuisine
                </td>
            </tr>
        }
    </table>

    <p>@Model.Message</p>
}
