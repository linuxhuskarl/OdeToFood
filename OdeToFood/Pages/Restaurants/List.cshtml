@page
@model OdeToFood.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}

<div class="text-center">
    <h1 class="display-4">Restaurants</h1>
</div>

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message </div>
}

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control"
                   asp-for="SearchTerm" />
            <span class="input-group-append">
                <button class="btn btn-primary">
                    <span class="iconify" data-icon="fa-solid:search" data-inline="false"></span>
                </button>
            </span>
        </div>
    </div>
</form>

@foreach(var restaurant in Model.Restaurants)
{
    <partial name="_Summary" model="restaurant" />
}

<a class="btn btn-primary" asp-page="./Edit">
    Add new
</a>