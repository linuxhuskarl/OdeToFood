@using OdeToFood.Core
@model Restaurant

    <div class="card">
        <div class="card-header">
            @Model.Name
        </div>
        <div class="card-body">
            <p class="card-text">
                <span>Location: @Model.Location</span>
                <span>Cuisine: @Model.Cuisine</span>
            </p>
        </div>
        <div class="card-footer text-muted">
            <a class="btn"
               asp-page="./Detail"
               asp-route-restaurantId="@Model.Id">
                <span class="iconify" data-icon="fa-solid:search-plus" data-inline="false"></span>
            </a>
            <a class="btn"
               asp-page="./Edit"
               asp-route-restaurantId="@Model.Id">
                <span class="iconify" data-icon="fa-solid:edit" data-inline="false"></span>
            </a>
            <a class="btn"
               asp-page="./Delete"
               asp-route-restaurantId="@Model.Id">
                <span class="iconify" data-icon="fa-solid:trash" data-inline="false"></span>
            </a>
        </div>
    </div>